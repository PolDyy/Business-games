# editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = space
end_of_line = lf


[*.{py,js}]
indent_size = 4
trim_trailing_whitespace = true

[*.{html,css}]
indent_size = 2


[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.jsx]
indent_size = 2
